<%- include('partials/header') %>

<section id="loginPage">

<div class="container">
  <h1 class="login-header">Login</h1>

  <div class="row">
    <div class="col-sm-12 email-pass-login">
      <div class="card email-pass-card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label class="email-pass-txt"for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label class="email-pass-txt" for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <ul>
                <% if(failedAttempt) { %>
                    <li id="login-fail-txt" class="input-requirements">
                        Email and password did not match
                    </li>
                <% } %>

            </ul>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>
</section>
</section>
<%- include('partials/footer') %>
